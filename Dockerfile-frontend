FROM node:latest AS build-stage

WORKDIR /usr/local/appfrontend

COPY package*.json /appfrontend/

RUN npm install

COPY ./ /usr/local/appfrontend/

RUN npm run build --prod

FROM nginx:1.15

COPY --from=build-stage /usr/local/appfrontend/dist/coder-gate-ui/ /usr/share/nginx/html

COPY ./nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
