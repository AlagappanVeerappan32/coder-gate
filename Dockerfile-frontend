FROM node:latest AS build-stage


WORKDIR /usr/local/appfrontend


COPY coder-gate-ui/package.json /usr/local/appfrontend/
COPY coder-gate-ui/package-lock.json /usr/local/appfrontend/


RUN npm install

COPY . /usr/local/appfrontend/


RUN npm run build

FROM nginx:latest

COPY --from=build-stage /usr/local/appfrontend/dist/coder-gate-ui/ /usr/share/nginx/html

COPY /home/gitlab-runner/builds/ju9h8FbR/0/courses/2023-winter/csci-5308/group19/ /etc/nginx/conf.d/default.conf


EXPOSE 80
