FROM node:latest AS build-stage

WORKDIR /app

COPY coder-gate-ui/package.json ./
COPY coder-gate-ui/package-lock.json ./

RUN npm install

COPY . .

RUN npm run build --prod

FROM nginx:latest

COPY --from=build-stage /app/dist/coder-gate-ui/ /usr/share/nginx/html

COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
